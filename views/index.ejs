<%- include("./partials/header.ejs") %> 
<body>
    <!-- Navigation -->
    <%- include("./partials/navbar.ejs") %> 

    <!-- All Products -->
    <section class="section all-products" id="products">
        <div class="top container">
            <h1>All Products</h1>
            <form>
                <select>
                    <option value="1">Defualt Sorting</option>
                    <option value="2">Sort By Price</option>
                    <option value="3">Sort By Popularity</option>
                    <option value="4">Sort By Sale</option>
                    <option value="5">Sort By Rating</option>
                </select>
                <span><i class='bx bx-chevron-down'></i></span>
            </form>
        </div>

        <div class="product-center container">
            <% if(data.products.length == 0){ %> There are no products <% }else{ for(let i = 0; i < data.products.length; i++){ %>  
            <div class="product">
                <div class="product-header">
                    <img src="./<%= data.products[i].img %>" alt="">
                    <ul class="icons">
                        
                        <a href="/product/<%= data.products[i].id %> "> <span><i class="bx bx-search"></i></span>
                        </a>
                        <% if(data.user.type == "raja"){ %><a onclick="return confirm('are you sure u wanna delete?')" href="/delete-product/<%= data.products[i].id %> "><span><i class="bx bx-trash"></i></span></a> <% } %>  
                    </ul>
                </div>
                
                <div class="product-footer">
                    <a href="product-details.html">
                        <h3><%= data.products[i].title %></h3>
                    </a>
                    
                    <h4 class="price"><%= data.products[i].price %> TK</h4>
                </div>
            </div>
            <% } } %> 
        </div>
    </section>

    <section class="pagination">
        <div class=" container">
            <span>1</span>
            <span>2</span>
            <span>3</span>
            <span>4</span>
            <span><i class='bx bx-right-arrow-alt'></i></span>
        </div>
    </section>



